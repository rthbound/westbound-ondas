  <body>
    <div class='heading'>
      <amp-fit-text
        height="40px"
        ><%= @onda.page_header %>
      </amp-fit-text>
    </div>
    <amp-facebook
			media="(max-width: 440px)"
      width="552"
      height="310"
      layout="responsive"
      data-embed-as="video"
      data-href="<%= @onda.facebook_video_url %>">
    </amp-facebook>
    <amp-facebook
			media="(min-width: 441px)"
      width="552"
      height="310"
      layout="fill"
      data-embed-as="video"
      data-href="<%= @onda.facebook_video_url %>">
    </amp-facebook>
    <footer>
			<div class='row-fluid'>
				<amp-social-share height="60px" width="270px" data-param-url="<%= @onda.published_url %>" data-param-text="<%= @onda.tweet %>" type="twitter"></amp-social-share>
			</div>
			</br>
      <div></div>
