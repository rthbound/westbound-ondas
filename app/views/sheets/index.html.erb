<p id="notice"><%= notice %></p>

<h1>Sheets</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Tweet</th>
      <th>Url</th>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= sheet.id %></td>
        <td><%= tweet_sheet_text %></td>
        <td><%= sheet.url %></td>
        <td><%= sheet.title %></td>
        <td><%= link_to 'Show', sheet_path(sheet, passphrase: sheet.passphrase) %></td>
        <td><%= link_to 'Edit', edit_sheet_path(sheet) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sheet', new_sheet_path %>
