<body>
  <style>
    span {
      white-space: normal;
    }
    footer div {
      margin-top: 30px;
      width: 100%;
      max-height:30px;
      min-height: 30px;
      background-image: url('/made.png');
      background-position: center center;
      background-size: contain;
      background-repeat: no-repeat;
    }
    .heading {
      color: #003300;
    }
    body {
      background: linear-gradient(45deg,#075DA4,#388FDA, #F5FFFA) no-repeat fixed;
      margin: 20px;
    }
    p {
      color: #f0f0f0;
      font-size: 16px;
    }
    p a {
      background-color: #f0f0f0;
      margin: 3px;
    }

    .hidden {
      display: none;
    }
  </style>
  <script type='text/javascript'>
    $(document).ready(function(){
      $.get("/sheets/<%= @sheet.id %>?passphrase=<%= @sheet.passphrase %>", function(data){
        var html = $.map(data, function(el,i){
          el = el.replace(/["]+/g, '')
          el = el.replace(/:flame:/g, 'üî•')
          el = el.replace(/:cloud:/g, '‚òÅ')
          el = el.replace(/:lightning:/g, '‚ö°')
          el = el.replace(/:ocean:/g, 'üåä')
          $(".row").append($("<p class='tweet'>@" + el + " " + $('.tweet').html() + "<br /><a class='btn button-hvr-shadow-radial' href=\"https://twitter.com/intent/tweet?text="
                              + encodeURIComponent("@" + el + " " + $('.tweet').html())
                              + "\" target='_blank'><span><strong>"
                              + i + " - Tweet This</strong></span></a></p>"));
          });

      })

      $("input").on('change', function(){
        var a = parseInt($("input.a").val());
        var b = parseInt($("input.b").val());

        if($.isNumeric(a) && $.isNumeric(b) && a < b){
          // a-to-b
          $(".tweet").slice(b + 1).addClass("hidden");
          $(".tweet").slice(0, Math.max(a, 0)).addClass("hidden");
          $(".tweet").slice(a, b + 1).removeClass("hidden")
        } else if($.isNumeric(a)){
          // a-to-end
          $(".tweet").slice(0, a).addClass("hidden")
          $(".tweet").slice(a).removeClass("hidden")
        } else if($.isNumeric(b)){
          $(".tweet").slice(b).addClass("hidden");
          $(".tweet").slice(0, b + 1).removeClass("hidden");
        } else {
          $(".tweet").removeClass("hidden")
        }
      })
    });
  </script>

